  <form id="loginForm">
    <input type="text" id="firstName" placeholder="First Name">
    <input type="text" id="lastName" placeholder="Last Name">
    <input type="email" id="email" placeholder="Email ID">
    <button onclick="return submit(); " class="btn btn-primary">Login</button>
  </form>

  <script>
  function submit() {
    var data = {
      Email: $('#email').val()
    };

    $.post("/Auth/Login",
      { loginModel: data },
      function () {
        //https://doc.sitecore.com/cdp/en/developers/sitecore-customer-data-platform--data-model-2-1/send-an-identity-event-to-sitecore-cdp.html
        _boxeverq.push(function () {
          var identityEvent = {
            "channel": "WEB",
            "type": "IDENTITY",
            "language": "EN",
            "currency": "INR",
            "page": "/login",
            "pos": "@HelloSitecoreCDP.Helpers.ConfigHelper.POS",
            "browser_id": Boxever.getID(),
            "email": $('#email').val(),
            "title": "Mr",
            "firstname": $('#firstname').val(),
            "lastname": $('#lastname').val(),
            "gender": "male",
            "dob": "1980-01-23T00:00",
            "passport_no": "IR123456",
            "mobile": "+3531234567",
            "phone": "+353123456",
            "street": ["Ashford House", "Tara Street", "Dublin 2"],
            "city": "Vadodara",
            "country": "India",
            "postal_code": "390021",
            "propensitytopirchase": "0.5"
                        "identifiers": [{
              provider: BXLP,
              id: 56789
                        }]
          };

          // Invoke event create
          // (<event msg>, <callback function>, <format>)
          Boxever.eventCreate(identityEvent, function (data) { }, 'json');
        });

        alert('Successfully Logged In.')
      });

    return false;
  }




  </script>



